@model List<Student>

@{
    ViewBag.Title = "Студенты";
    Layout = "_Layout";
}

<h2>Студенты</h2>
<div class="table-section">
    @if (@Model.Count == 0)
    {
        <p>Студентов нет</p>
    }
    else
    {
        <table style="width: 100%">
            <tr>
                <th>Имя</th>
                <th>Фамилия</th>
            </tr>
            @foreach (var student in @Model)
            {
                <tr>
                    <td>@student.FirstName</td>
                    <td>@student.LastName</td>
                    <td>@Html.ActionLink("Изменить", "Edit", "Students", new {id = student.StudentId})</td>
                </tr>
            }
        </table>
    }
</div>