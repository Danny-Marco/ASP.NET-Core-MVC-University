@model List<Group>

@{
    ViewBag.Title = "Группы";
    Layout = "_Layout";
}

<h2>Группы</h2>
<div class="table-section">
    @if (@Model.Count == 0)
    {
        <p>Групп ещё нет</p>
    }
    else
    {
        <table style="width: 100%">
            <tr>
                <th>Курс</th>
                <th>Группа</th>
            </tr>
            @foreach (var group in @Model)
            {
                <tr>
                    <td>@group.Course.Name</td>
                    <td>@Html.ActionLink($"{group.Name}", "Show", "Groups", new {id = @group.GroupId}, null)</td>
                    <td>@Html.ActionLink("Изменить", "Edit", "Groups", new {id = @group.GroupId})</td>
                </tr>
            }
        </table>
    }
</div>