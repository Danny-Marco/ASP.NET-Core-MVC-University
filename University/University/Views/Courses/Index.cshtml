@model List<Course>

@{
    ViewBag.Title = "Курсы";
    Layout = "_Layout";
}

<h2>Курсы</h2>
<div class="table-section">
    @if (@Model.Count == 0)
    {
        <p>Курсов ещё нет</p>
    }
    else
    {
        <table style="width: 100%">
            <tr>
                <th>Название</th>
                <th>Описание</th>
            </tr>
            @foreach (var course in @Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink($"{course.Name}", "ShowGroups", "Courses", new { id = @course.CourseId}, null)
                    </td>
                    <td>@course.Description</td>
                </tr>
            }
        </table>
    }
</div>
